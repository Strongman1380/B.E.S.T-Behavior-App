# PostgreSQL Database Configuration
# For Neon: Get connection string from Neon dashboard
# For Vercel Postgres: Get from Vercel project settings
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
POSTGRES_URL=postgresql://username:password@hostname:5432/database_name

# Alternative format for development
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=username
# POSTGRES_PASSWORD=password
# POSTGRES_DB=bright_track

# Firebase Configuration (optional fallback)
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Environment
NODE_ENV=development