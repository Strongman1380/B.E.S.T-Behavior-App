{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "NODE_TLS_REJECT_UNAUTHORIZED": "0"
  },
  "build": {
    "env": {
      "NODE_TLS_REJECT_UNAUTHORIZED": "0"
    }
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}